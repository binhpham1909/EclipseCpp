#ifndef TIMERMANAGER_H_
#define TIMERMANAGER_H_

#include "DebugSetting.h"
#include "TimeLib.h"
#include "DNSServer.h"

#define NTP_LOCAL_PORT 2395      // local port to listen for UDP packets
#define NTP_PACKET_SIZE 48 // NTP time stamp is in the first 48 bytes of the message

struct kJob {
	void (*func)();
	bool (*conditionFunc)();
	unsigned long atTime;
};

class TimerManager {
public:
	TimerManager();
	virtual ~TimerManager();

	bool autoSync(time_t ifSyncOK = 14400, time_t ifSyncFailed = 300);
	void setNTPServer(const char *server);
	bool sync();
	bool sendNTPpacket(WiFiUDP& udp);


protected:
	String NtpServerName;
	byte* PacketBuffer;
	time_t LastSync;
	time_t ResyncPeriod;

private:
	long long m_count;
	long long m_lastCheckedJobId;
	unsigned long m_workTime;
	unsigned long m_lastEndTime;
	kJob *m_jobs;
};

#endif /* TIMERMANAGER_H_ */
